<!DOCTYPE html>
<html lang="en">

<head>
    <title>Dashboard</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <body>
        <%- include("../part/header") %>
            <div class="container mt-5">
                <center>
                    <h1 style="color: green">List customers</h1>
                </center>
                <a href="/customer/add" class="btn btn-outline-success">Add customer</a> <br>
                <hr>
                <table class="table table-success table-striped">
                    <tr>
                        <th>Name</th>
                        <th>Old</th>
                        <th>Edit</th>
                        <th>Edit Model</th>
                        <th>Delete</th>

                    </tr>
                    <%
                    for(let i=0;i<customers.length;i++){%>

                        <tr>
                            <td id="name<%= customers[i]._id %>">
                                <%= customers[i].name %>
                            </td>
                            <td id="old<%= customers[i]._id %>">
                                <%= customers[i].old %>
                            </td>
                            <td><button class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#ha">Edit</button></td>
                            <th><button class="btn btn-outline-success editModel" data-bs-toggle="modal" data-bs-target="#ha" id="<%= customers[i]._id %>">Edit Modal</button></th>
                            <td>
                                <form action="/customer/delete/<%= customers[i]._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-outline-danger">DELETE</button>
                                </form>
                            </td>
                        </tr>

                        <%}
            %>
                </table>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="ha" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <form action="" method="POST" name="myForm">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">

                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="name" placeholder="Tên kh" name="name">
                                    <label for="floatingInput">Tên khách hàng</label>
                                </div>
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="old" placeholder="Tủi" name="old">
                                    <label for="floatingAge">Tủi</label>
                                </div>


                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <script>
                const editModel = document.getElementsByClassName('editModel')
                for (let i = 0; i < editModel.length; i++) {
                    editModel[i].addEventListener('click', show)
                }

                function show() {
                    document.getElementById('name').value = document.getElementById('name' + this.id).innerHTML
                    document.getElementById('old').value = document.getElementById('old' + this.id).innerHTML
                    document.myForm.action = "/customer/edit/" + this.id + "?_method=PUT"
                }
            </script>
    </body>

</html>